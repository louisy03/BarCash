from tkinter import Frame, Label, Entry, Button
from controllers.login_controller import LoginController

class LoginView(Frame):
    def __init__(self, root):
        super().__init__(root)
        self.root = root
        self.pack()

        Label(self, text="Inicio de Sesión", font=("Arial", 20)).pack(pady=20)
        Label(self, text="Usuario:").pack()
        self.usuario_entry = Entry(self)
        self.usuario_entry.pack(pady=5)

        Label(self, text="Contraseña:").pack()
        self.contrasena_entry = Entry(self, show="*")
        self.contrasena_entry.pack(pady=5)

        Button(self, text="Iniciar sesión", command=self.validar_credenciales).pack(pady=20)

    def validar_credenciales(self):
        usuario = self.usuario_entry.get()
        contrasena = self.contrasena_entry.get()

        if LoginController.validar_usuario(usuario, contrasena):
            print("Inicio de sesión exitoso")
            # Aquí cambiarías a la pantalla principal
        else:
            print("Usuario o contraseña incorrectos")
